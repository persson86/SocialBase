<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1B6197"
    tools:context="com.project2016.lfspersson.socialbasetest1.SobreDev">

    <TextView
        android:id="@+id/tvTit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre o desenvolvedor"
        android:textColor="#FFFFFF"
        android:textSize="10pt"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@id/tvNome"
        android:layout_below="@id/tvTit"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luiz Felipe S. Persson"
        android:layout_marginBottom="10dp"
        android:textSize="8pt"/>

    <ImageView
        android:id="@+id/imgLinkedin"
        android:layout_below="@id/tvNome"
        android:src="@drawable/linkedin"
        android:layout_width="150px"
        android:layout_height="150px"
        android:onClick="onCLick_Linkedin"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/imgGithub"
        android:layout_below="@id/imgLinkedin"
        android:src="@drawable/github"
        android:layout_width="150px"
        android:layout_height="150px"
        android:onClick="onCLick_Github"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/imgInstagram"
        android:layout_below="@id/imgGithub"
        android:src="@drawable/instagram"
        android:layout_width="150px"
        android:layout_height="150px"
        android:onClick="onCLick_Instagram"/>

</RelativeLayout>
